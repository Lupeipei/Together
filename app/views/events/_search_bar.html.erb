<%= form_tag search_events_path, :method => :get, :class => "event-search-form" do %>
  <div class="input-group">
    <input type="text" class="form-control search-bar-input" name="q",value="<%= params[:q]%>" placeholder="搜索活动……">
    <span class="input-group-btn">
      <button type="submit" class="btn btn-default search-bar-submit">
      <span class="glyphicon glyphicon-search"></span>
      </button>
    </span>
  </div>
<% end %>
