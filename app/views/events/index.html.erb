<div class="container eventslist_page">
  <div class="row">
    <div class="col-md-12">
      <!-- 筛选区域 -->
      <div class="submenu">
        <span><i class="fa fa-home fa-lg"></i> 兴趣: </span>
        <div class="btn-group" style="margin-left: 20px;">
          <%= link_to "全部", events_path, :class => "btn btn-default btn-group #{(params[:category].blank?)? "active" : ""}"%>
          <% Category.all.each do |c| %>
            <%= link_to c.name, events_path(category: c), :class => "btn btn-default btn-group #{(params[:category] == c)? "active" : "" }"%>
          <% end %>
        </div>
      </div>

      <!-- <div class="submenu">
        <span><i class="fa fa-map-marker fa-lg"></i> 城市: </span>
        <div class="btn-group" style="margin-left: 20px;">
          <%= link_to "全部", events_path, :class => "btn btn-default btn-group #{(params[:category].blank?)? "active" : ""}"%>
          <% Category.all.each do |c| %>
            <%= link_to c.name, events_path(category: c), :class => "btn btn-default btn-group #{(params[:category] == c)? "active" : "" }"%>
          <% end %>
        </div>
      </div> -->

      <!-- 活动列表 -->
      <ul class="clearfix">
        <% @events.each do |event| %>
        <div class="col-md-4">
          <div class="eventList-item">
            <p class="eventList-item-pic">
                <%= link_to event_path(event) do %>
                  <% if event.logo.present? %>
                    <%= image_tag(event.logo.url, size: "250x250") %>
                  <% else %>
                    <%= image_tag("http://placehold.it/250x250&text=No Pic") %>
                  <% end %>
              </p>
                <p class="title"><%= event.title %></p>
              <% end %>
                <div class="details">
                  <div class="city"><i class="fa fa-map-marker" aria-hidden="true"></i> <%= event.city %></div>
                  <div id="favorite-<%= event.id %>">
                    <%= render :partial => "favorite", :locals => {:event => event }%>
                  </div>
                </div>
          </div>
        </div>
        <% end %>
      </ul>
    </div>
  </div>
</div>
