<!DOCTYPE html>
<html>
  <head>
    <title>JobListing04</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <%= render "common/navbar"%>
      <%= render "common/flashes"%>
      <div class="row">
        <div class="col-md-2">
          <ul class="nav nav-pills nav-stacked" style="max-width: 300px; padding-top: 20px;">
            <li class="active"><%= link_to("Jobs", admin_jobs_path)%></li>
            <li>
              <%= link_to admin_jobs_path(:is_hidden => true) do %>
                <i class="fa fa-lock"></i>  Hidden Jobs
                <% end %>
            </li>
            <li>
              <%= link_to admin_jobs_path(:is_hidden => false) do %>
                <i class="fa fa-globe"></i>  Published Jobs
                <% end %>
            </li>
          </ul>
        </div>
        <div class="col-md-10">
          <%= yield %>
        </div>
      </div>
    </div>
    <%= render "common/footer"%>
  </body>
</html>
