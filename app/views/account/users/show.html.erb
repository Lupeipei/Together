<div class="container my_info">
  <div class="row">
      <h1 class="text-center">个人中心</h1>
      <div class="col-md-12">
      <div class="col-md-4 text-center my_info_avatar">
        <% if current_user.avatar.present? %>
          <%= link_to image_tag(current_user.avatar.url,size: "200x200", :target => "_blank")%>
        <% else %>
          <%= image_tag("https://ws4.sinaimg.cn/large/006tNc79gy1fj8fv5d1tdj30zk0npdig.jpg", size: "200x200", :target => "_blank")%>
        <% end %>
        <p>当前头像</p>
      </div>

      <div class="col-md-8 basic_info">
        <h3>基本信息</h3>
        <br>

        <%= simple_form_for [:account, @user] do |f| %>
          <div class="my_name">
            <p><strong>邮箱：  </strong><%= @user.email %></p>
            <br>
            <p><strong>用户名：  </strong><input type="text" name="user[username]" value="<%= @user.username %>"></p>
          </div>
          <div class="my_password">
            <p><strong>修改密码： </strong></p>
            <br>
            <%= f.input :password, label: "旧密码", hint: false, error_html: { id: 'password_error'} %>
            <%= f.input :password, label: "新密码", hint: false, error_html: { id: 'password_error'} %>
            <%= f.input :password_confirmation, label: "密码确认" %>
          </div>
          <div class="my-photo">
            <p><strong>头像设置：</strong></p>
            <%= f.file_field :avatar%>
          </div>
          <br>
          <div class="form-group">
            <%= f.submit "更新", class: "btn btn-default"%>
          </div>

        <% end %>
      </div>
    </div>
    </div>
  </div>
</div>
