<h1 class="text-center">个人中心</h1>
<div class="pull-right">
  <%= link_to "编辑个人信息", edit_account_user_path(@user), class: "btn btn-default"%>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-3">
        <% if current_user.avatar.present? %>
          <%= link_to image_tag(current_user.avatar.url,size: "200x200", :target => "_blank")%>
        <% end %>
        <p class="text-center">当前头像</p>
      </div>

      <div class="col-md-9">
        <h3>基本信息</h3>
        <br>

        <%= simple_form_for [:account, @user] do |f| %>
          <div class="my-info">
            <span>邮箱：</span> <span><%= @user.email %></span><br>
            <span>用户名：</span> <input type="text" name="user[username]" value="<%= @user.username %>"><br>
            <%= f.file_field :avatar, label: "头像设置"%>
          </div>
          <div class="form-group">
            <%= f.submit "更新", class: "btn btn-primary"%>
          </div>
        <% end %>
      </div>
    </div>
    </div>
  </div>
</div>
