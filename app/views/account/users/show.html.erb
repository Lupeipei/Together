<div class="container my_info">
  <div class="row">

      <div class="col-md-12">
      <div class="col-md-4 text-center my_info_avatar">
        <% if current_user.avatar.present? %>
          <%= link_to image_tag(current_user.avatar.url,size: "200x200", :target => "_blank")%>
        <% else %>
          <%= image_tag("https://ws4.sinaimg.cn/large/006tNc79gy1fj8fv5d1tdj30zk0npdig.jpg", size: "200x200", :target => "_blank")%>
        <% end %>
        <p>当前头像</p>
      </div>

      <div class="col-md-8 basic_info">
        <h3>基本信息</h3>
        <br>
        <p><strong>邮箱：  </strong><%= @user.email %></p>
        <hr>
        <%= simple_form_for [:account, @user] do |f| %>
          <div class="my_name">
            <h4 style="margin-bottom: 15px;">修改用户名： </h4>
            <%= f.label :"用户名：" %>
            <%= f.input_field :username %>
          </div>
          <hr>
          <div class="my-photo">
            <h4>修改头像： </h4>
            <%= f.file_field :avatar%>
          </div>
          <br>
          <div class="form-group">
            <%= f.submit "更新", class: "btn btn-success"%>
          </div>

        <% end %>
      </div>
    </div>
    </div>
  </div>
</div>
