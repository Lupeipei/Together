<div class="pull-right" style="margin-right: 80px; margin-top: 10px;">
  <div class="dropdown">
  <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    排序
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
    <li><%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound"))%></li>
    <li><%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound"))%></li>
    <li><%= link_to("按照发布时间排序", jobs_path)%></li>
  </ul>
</div>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Company</th>
      <th>City</th>
      <th>wage lower bound</th>
      <th>wage upper bound</th>
      <th>Updated at</th>
    </tr>
  </thead>
  <% @jobs.each do |job| %>
    <tr>
      <td>
        <%= link_to(job.title, job_path(job))%>
      </td>
      <td><i class="fa fa-building" aria-hidden="true"></i> <%= job.company%></td>
      <td><i class="fa fa-location-arrow" aria-hidden="true"></i> <%= job.city %></td>
      <td><%= job.wage_lower_bound%></td>
      <td><%= job.wage_upper_bound%></td>
      <td>
        <%= job.created_at %>
      </td>
    </tr>
  <% end %>
</table>

<div class="text-center">
  <%= will_paginate @jobs%>
</div>
